<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ArBottomBarButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">22dp</item>
        <item name="android:background">@drawable/ar_buttons_background</item>
        <item name="android:tint">@color/white</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ArBottomBarButton2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">22dp</item>
        <item name="android:background">@drawable/ar_buttons_background</item>
        <item name="android:tint">@color/white</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ARButtonAdd">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:padding">28dp</item>
        <item name="android:background">@drawable/ar_add_button</item>
        <item name="android:tint">@color/white</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ARBackButton">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/rounded_back_button</item>
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ProgressCircle">
        <item name="android:id">@id/progress_circle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <item name="progress_circle" type="id"/>

</resources>
